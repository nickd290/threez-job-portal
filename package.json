    "googleapis": "^171.4.0",
    "lucide-react": "^0.453.0",
    "multer": "^2.0.2",
    "nanoid": "^5.1.6",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.4.5",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-dropzone": "^14.4.0",
    "react-hook-form": "^7.71.1",
